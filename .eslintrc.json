{
	"env": {
        "node": true,
        "es2021": true
    },
	"extends": [
		"next/core-web-vitals",
		"airbnb-base"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
        "indent": [
            "warn",
            "tab"
        ],
		"no-unused-vars": [
			"warn"
		],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "single",
			{"allowTemplateLiterals": true}
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-multiple-empty-lines": [
			"off"
		],
		"padded-blocks": [
			"warn",
			"always",
			{"allowSingleLineBlocks": true}
		],
		"no-tabs": [
			"off"
		],
		"object-curly-spacing": [
			"warn"
		],
		"keyword-spacing": [
			"warn"
		],
		"brace-style": [
			"warn"
		],
		"no-trailing-spaces": [
			"off"
		],
		"eol-last": [
			"warn"
		],
		"prefer-destructuring": [
			"warn"
		],
		"no-param-reassign": [
			"off"
		],
		"comma-spacing": [
			"warn"
		],
		"comma-dangle": [
			"warn",
			"never"
		],
		"object-curly-newline": [
			"warn"
		],
		"object-shorthand": [
			"warn"
		],
		"key-spacing": [
			"warn"
		],
		"no-useless-constructor": [
			"warn"
		]
    }
}
